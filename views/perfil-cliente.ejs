<% include partials/header %>

<body>
    <!-- PAGINA COMPLETA -->
    <div class="page">
        <%- include('partials/navbar') %>

        <!-- CONTEÚDO PRINCIPAL -->
        <div id="meio-home" class="container">
            <div class="row ">
           
                <!-- CONTAINER CAMINHO DAS PAGINAS -->
                <%- include('partials/breadcrumb') %>
                <div id="content" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                   

                    <div id="painel-cliente" class="container center">
                        <!-- ### CARD DE DADOS -->
                        <div class="card painel-dash border-left-primary shadow ml-5 mr-5">
                            <div class="card-body painel-dash">

                                <form action="/usuarios/perfil-cliente" method="POST">
                                    <div class="row">
                                        <div class='col-4'>
                                            <h4>Dados Pessoais</h4>
                                        </div>
                                    
                                        <div class='col-8 text-right'>
                                            <a href="/usuarios/editar-cliente/<%= usuario.id %>" class="btn btn-alt">Alterar Dados</a>
                                            <!-- <button type="button" class="btn btn-alt" data-toggle="modal" data-target="#exampleModal" 
                                            data-whatever="<%= usuario.id %>"
                                            data-whatevernome="<%= usuario.nome + ' ' + usuario.sobrenome %>"
                                            data-whateverdata="<%= usuario.data_nasc %>"
                                            data-whatevercpf="<%= usuario.cpf %>">Alterar Dados</button>                   -->
                                        </div>                  
                                    
                                        <!-- Modal -->
                                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Dados Pessoais</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                                </div>
                                                <div class="modal-body">
                                                <form action="/usuarios/perfil-cliente" method="POST">
                                                    <div class="form-group">
                                                    <label for="recipient-name" class="col-form-label">Nome Completo:</label>
                                                    <input type="text" class="form-control" id="recipient-name" name="nome">
                                                    </div>
                                                    <div class="form-group">
                                                    <label for="recipient-data" class="col-form-label">Data de Nascimento:</label>
                                                    <input type="date" class="form-control" id="recipient-data" name="data">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="recipient-cpf" class="col-form-label">CPF:</label>
                                                        <input type="text" class="form-control" id="recipient-cpf" name="cpf">
                                                    </div>
                                                    <input type="hidden" id="id-usuario" name="id" value="<%= usuario.id %>"> 
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                                                        <button type="submit" class="btn btn-primary">Alterar</button>
                                                    </div>
                                                </form>
                                                </div>
                                            </div>
                                            </div>
                                        </div>
                                        <!-- Fim Modal -->
                                    </div>
                                </form>
                                <!-- Divider -->
                                <hr class="sidebar-divider my-0">

                                <div class="painel-dados row">

                                    <div class='col-8'>
                                            <!-- NOME COMPLETO-->
                                            <div class="form-group row">
                                                <label for="inputNome" class="col-sm-3 col-form-label">Nome Completo</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" id="inputNome" name="nomeCli" placeholder="<%= usuario.nome + ' ' + usuario.sobrenome%> " readonly>
                                                </div>
                                            </div>
                                            <!-- DATA NASCIMENTO -->
                                            <div class="form-group row">
                                                <label for="inputData" class="col-sm-3 col-form-label">Data de
                                                    Nascimento</label>
                                                <div class="col-sm-5">
                                                    <input type="date" class="form-control" id="inputData" name="dataCli" placeholder="<%= usuario.data_nasc %>" readonly>
                                                </div>
                                            </div>
                                            <!-- CPF-->
                                            <div class="form-group row">
                                                <label for="inputCPf" class="col-sm-3 col-form-label">CPF</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" id="inputCPF" name="cpfCli" placeholder="<%= usuario.cpf %>" readonly>
                                                </div>
                                            </div>
                                            <!-- EMAIL -->
                                            <div class="form-group row">
                                                <label for="inputEmail" class="col-sm-3 col-form-label">Email</label>
                                                <div class="col-sm-9">
                                                    <input type="email" class="form-control" id="inputEmail" name="emailCli" placeholder="<%= usuario.email %>" readonly>
                                                </div>
                                            </div>
                                            <!-- SEXO -->
                                            <fieldset class="form-group">
                                                <div class="row">
                                                    <legend class="col-form-label col-sm-3 pt-0">Sexo</legend>
                                                    <div class="form-check form-check-inline">
                                                        <input class="form-check-input" type="radio" name="radioSexo"
                                                            id="radioSexoF" value="opcao1">
                                                        <label class="form-check-label" for="radioSexoF">Feminino</label>
                                                    </div>
                                                    <div class="form-check form-check-inline">
                                                        <input class="form-check-input" type="radio" name="radioSexo"
                                                            id="radioSexoM" value="opcao2">
                                                        <label class="form-check-label" for="radioSexoM">Masculino</label>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                        <div class="col-4 text-center">
                                            <img id='avatar' class='shadow border-bottom-primary rounded-circle'
                                                src='../images/perfilCliente.png' width="150px" height="150px" alt='avatar'>
                                            <button class="btn btn-alt text-center">Escolha sua foto!</button>
                                        </div>                                    
                                </div>
                            </div>
                        </div>

                        <!-- ### CARD DE ENDERECO -->
                        <div class="card painel-dash border-left-primary shadow ml-5 mr-5">
                            <div class="card-body ">
                                <div class="row">
                                    <div class='col-4'>
                                        <h4>Endereço:</h4>
                                    </div>
                                    <div class='col-8 text-right'>
                                        <button class="btn btn-alt">Alterar Endereço</button>
                                    </div>

                                </div>
                                <!-- Divider -->
                                <hr class="sidebar-divider my-0">

                                <div class="painel-dados row">
                                    <div class='col-12'>
                                        <div class="row text-left">
                                            <div class="row col-12">

                                                <!-- FORMULARIO -->
                                                <form class="col-sm-12 p-3 mb-5 ">
                                                    <!-- CEP-->
                                                    <div class="form-group row">
                                                        <label for="inputRua"
                                                            class="col-sm-2 col-form-label">CEP</label>
                                                        <div class="col-sm-5">
                                                            <input type="text" class="form-control" id="inputCep">
                                                        </div>

                                                        <div class=" text-left col-sm-2">
                                                            <button
                                                                class="btn btn-sm btn-outline-secondary">Buscar</button>
                                                        </div>

                                                    </div>
                                                    <!-- RUA -->
                                                    <div class="form-group row">
                                                        <label for="inputRua"
                                                            class="col-sm-2 col-form-label">Rua</label>
                                                        <div class="col-sm-5">
                                                            <input type="text" class="form-control" id="inputRua">
                                                        </div>
                                                        <label for="inputNum" class="col-sm-2 col-form-label">Nº</label>
                                                        <div class="col-sm-3">
                                                            <input type="text" class="form-control" id="inputNum">
                                                        </div>
                                                    </div>
                                                    <!-- COMPLEMENTO -->
                                                    <div class="form-group row">
                                                        <label for="inputComplemento"
                                                            class="col-sm-2 col-form-label">Complemento</label>
                                                        <div class="col-sm-8">
                                                            <input type="text" class="form-control"
                                                                id="inputComplemento">
                                                        </div>
                                                    </div>
                                                    <!-- BAIRRO -->
                                                    <div class="form-group row">
                                                        <label for="inputBairro"
                                                            class="col-sm-2 col-form-label">Bairro</label>
                                                        <div class="col-sm-8">
                                                            <input type="text" class="form-control" id="inputBairro">
                                                        </div>
                                                    </div>
                                                    <!-- CIDADE -->
                                                    <div class="form-group row">
                                                        <label for="inputCidade"
                                                            class="col-sm-2 col-form-label">Cidade</label>
                                                        <div class="col-sm-5">
                                                            <input type="text" class="form-control" id="inputCidade">
                                                        </div>
                                                    </div>
                                                    <!-- ESTADO -->
                                                    <div class="form-group row">
                                                        <label for="inputEstado"
                                                            class="col-sm-2 col-form-label">Estado</label>
                                                        <div class="col-sm-5">
                                                            <select id="inputEstado" class="form-control">
                                                                <option selected>Escolher...</option>
                                                                <option value="1">São Paulo</option>
                                                                <option value="2">Rio de Janeiro</option>
                                                                <option value="3">Minas Gerais</option>
                                                                <option value="4">Rio Grande do Sul</option>
                                                            </select>
                                                        </div>
                                                    </div>

                                                </form>
                                                <!-- FIM FORMULARIO -->
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>


                        <!-- ### CARD DE MUDAR SENHA -->
                        <div class="card painel-dash border-left-primary shadow ml-5 mr-5">
                            <div class="card-body">
                                <div class="row">
                                    <div class='col-4'>
                                        <h4>Mudar Senha</h4>
                                    </div>
                                    <div class='col-8 text-right'>
                                        <button class="btn btn-alt">Alterar Senha</button>
                                    </div>

                                </div>
                                <!-- Divider -->
                                <hr class="sidebar-divider my-0">

                                <div class="row">
                                    <!-- FORMULARIO -->
                                    <form class="col-sm-12 p-3 mb-5 ">

                                        <!-- Senha-->
                                        <div class="form-group row">
                                            <label for="inputSenha" class="col-sm-3 col-form-label">Senha Atual:</label>
                                            <div class="col-sm-4">
                                                <input type="password" class="form-control" id="inputSenha">
                                            </div>
                                        </div>
                                        <!-- Nova Senha -->
                                        <div class="form-group row">
                                            <label for="inputNovaSenha" class="col-sm-3 col-form-label">Nova
                                                Senha:</label>
                                            <div class="col-sm-4">
                                                <input type="password" class="form-control" id="inputNovaSenha">
                                            </div>
                                        </div>
                                        <!-- Confirmar Senha -->
                                        <div class="form-group row">
                                            <label for="inputCorfirmarSenha" class="col-sm-3 col-form-label">Confirmar
                                                Senha:</label>
                                            <div class="col-sm-4">
                                                <input type="password" class="form-control" id="inputConfirmarSenha">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- ### CARD DE MUDAR PERFIL -->
                        <div class="card painel-dash border-left-primary shadow ml-5 mr-5">
                            <a href='../perfil-vendedor'>
                                <button class="btn btn-cheio btn-small col-12 text-left">
                                    Alterar para Perfil Vendedor </button>
                            </a>
                        </div>
                        <!-- #  Fim do Painel -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% include partials/footer-alt %>
    </div>
    <% include partials/script %>
    <script type="text/javascript">
        $('#exampleModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) // Botão que acionou o modal
            var recipient = button.data('whatever')
            var recipientnome = button.data('whatevernome')
            var recipientdata = button.data('whateverdata')
            var recipientcpf = button.data('whatevercpf') 
            var modal = $(this)
            modal.find('.modal-title').text('Dados Pessoais de ' + recipientnome)
            modal.find('#id-usuario').val(recipient)
            modal.find('#recipient-name').val(recipientnome)
            modal.find('#recipient-data').val(recipientdata)
            modal.find('#recipient-cpf').val(recipientcpf)
            
        })        
    </script>
</body>

</html>