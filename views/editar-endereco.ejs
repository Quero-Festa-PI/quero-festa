<% include partials/header %>

<body>
    <div class="page">
        <%- include('partials/navbar') %>

        <div id="meio-home" class="container">
            <div class="row">
                <%- include('partials/breadcrumb') %>

                <div id="content" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div id="painel-cliente" class="container center">

                        <!-- Endereço -->
                        <div class="card card-body painel-dash" id="borda">
                            <!-- Form endereço -->
                            <div class="row">
                                <div class="col-4">
                                    <h4>Endereço</h4>
                                </div>
                            </div>
                            <!-- Divider -->
                            <hr class="sidebar-divider my-0">

                            <form action="/usuarios/editar-endereco/<%= endereco.id %>?_method=PUT%>" method="POST">
                                <div class="painel-dados row">
                                    <div class='col-12'>
                                        <div class="row text-left">
                                            <div class="row col-12">
                                                <!-- Dados -->
                                                <div class='col-11'>
                                                    <!-- ID -->
                                                    <div class="form-group row">
                                                        <input type="hidden" class="form-control" name="enderecoId"
                                                            value="<%= endereco.id %>">
                                                    </div>
                                                    <!-- CEP-->
                                                    <div class="form-group row">
                                                        <label for="inputRua"
                                                            class="col-sm-2 col-form-label">CEP</label>
                                                        <div class="col-sm-5">
                                                            <input type="text" class="form-control" name="cep"
                                                                id="inputCep" value="<%= endereco.cep %>">
                                                        </div>

                                                        <div class=" text-left col-sm-2">
                                                            <button
                                                                class="btn btn-sm btn-outline-secondary">Buscar</button>
                                                        </div>

                                                    </div>
                                                    <!-- RUA -->
                                                    <div class="form-group row">
                                                        <label for="inputRua"
                                                            class="col-sm-2 col-form-label">Rua</label>
                                                        <div class="col-sm-5">
                                                            <input type="text" class="form-control" name="rua"
                                                                id="inputRua" value="<%= endereco.logradouro %>">
                                                        </div>
                                                        <label for="inputNum" class="col-sm-1 col-form-label">Nº</label>
                                                        <div class="col-sm-2">
                                                            <input type="text" class="form-control" name="numeral"
                                                                id="inputNum" value="<%= endereco.numeral %>">
                                                        </div>
                                                    </div>
                                                    <!-- COMPLEMENTO -->
                                                    <div class="form-group row">
                                                        <label for="inputComplemento"
                                                            class="col-sm-2 col-form-label">Complemento</label>
                                                        <div class="col-sm-8">
                                                            <input type="text" class="form-control" name="complemento"
                                                                id="inputComplemento"
                                                                value="<%= endereco.complemento %>">
                                                        </div>
                                                    </div>
                                                    <!-- CIDADE -->
                                                    <div class="form-group row">
                                                        <label for="inputCidade"
                                                            class="col-sm-2 col-form-label">Cidade</label>
                                                        <div class="col-sm-5">
                                                            <input type="text" class="form-control" name="cidade"
                                                                id="inputCidade" value="<%= endereco.cidade %>">
                                                        </div>
                                                    </div>
                                                    <!-- ESTADO -->
                                                    <div class="form-group row">
                                                        <label for="inputEstado"
                                                            class="col-sm-2 col-form-label">Estado</label>
                                                        <div class="col-sm-5">
                                                            <select id="inputEstado" class="form-control" name="estado">
                                                                <option
                                                                    <%= (endereco.estado == null)? 'selected' : '' %>>
                                                                    Escolher...</option>
                                                                <option value="SP"
                                                                    <%= (endereco.estado == 'SP')? 'selected' : '' %>>SP
                                                                </option>
                                                                <option value="RJ"
                                                                    <%= (endereco.estado == 'RJ')? 'selected' : '' %>>RJ
                                                                </option>
                                                                <option value="MG"
                                                                    <%= (endereco.estado == 'MG')? 'selected' : '' %>>MG
                                                                </option>
                                                                <option value="RS"
                                                                    <%= (endereco.estado == 'RS')? 'selected' : '' %>>RS
                                                                </option>
                                                            </select>
                                                        </div>
                                                    </div>

                                                </div>
                                                <!-- Fim dados -->
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Botão Salvar-->
                                <div class="text-right mt-2">
                                    <button type="submit" class="btn btn-alt">Salvar</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/script') %>
</body>