<% include partials/header %>
<link rel="stylesheet" href="./stylesheets/pedidostyle.css">

<body>
  <!-- PAGINA COMPLETA -->
  <div class="page">
    <% include partials/menu-logado %>
    
    <!-- CONTEÚDO PRINCIPAL -->
    <div id="meio-home" class="container">      
      <div class="row ">
        <% include partials/menu-horizontal %>               
        <!-- # Inicio Painel -->
            <div id="painel-publico" class="container">
              <!-- CONTAINER CAMINHO DAS PAGINAS -->
            <div class="tm-container">
              <div class="tm-inner">
                  <div class="row row-level-1">                      
                      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                          <div class="row-inner clearfix">
                              <div class="col-inner d-flex justify-content-around">
                                  <div id="content" class="col-sm-12 col-md-12 col-lg-12">
                                      <!-- CAMINHO DAS PAGINAS -->
                                      <div class="col-sm-11 mx-5">
                                          <nav aria-label="breadcrumb">
                                              <ol class="breadcrumb rounded shadow-sm" id="caminho-paginas">
                                                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                                                  <li class="breadcrumb-item active" aria-current="page"><a href="/pedidos/pedido">Pedidos</a></li>                        
                                              </ol>
                                          </nav>
                                      </div>
                                      <!-- FIM CAMINHO DAS PAGINAS -->
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <!-- FIM CONTAINER CAMINHO DAS PAGINAS -->
              <br>
              <!-- ### CARD DE DADOS PEDIDO -->
              <div class="card painel-dash border-left-primary shadow mx-5">
                  <div class="card-body painel-dash"> 
                      <div class="row">
                          <div class='col-8'>
                            <h4>Pedido: 100001234</h4>
                          </div>
                          <div class="col-4 text-left">
                            <h5>Aguardando Pagamento</h5>
                          </div>
                      </div>
                      <!-- Divider -->
                      <hr class="sidebar-divider my-0">
                      
                      <div class="painel-dados row col-12">                          
                          <img class='status img-fluid border-bottom-primary' src='../images/status.png' width="400px" height="400px" alt='avatar'>                        
                      </div>
                      <a href="#">
                          <button class="btn btn-cheio btn-muted">Rastrear</button>
                      </a>
                  </div>         
              </div>
  
              <!-- ### CARD DE INFORMACAO -->
              <div class="card painel-dash border-left-primary shadow mx-5">
                  <div class="card-body painel-dash"> 
                      <div class="row">
                          <div class='col-7'>
                            <h4>Informações</h4>
                          </div>                     
                      </div>
                      <!-- Divider -->
                      <hr class="sidebar-divider my-0">
                      <div class="row col-12">                          
                        <h5 class="text-left col-8">Vendedor: MeuBoteco</h5>
                        <button class="col-4 btn btn-sm btn-cheio">
                          Falar com Vendedor
                        </button>                          
                      </div>
                      <div class="painel-dados row"> 
                        <table class="table table-striped">
                          <thead>
                            <tr>
                              <th scope="col">ID</th>
                              <th scope="col">Item</th>
                              <th scope="col">Valor</th>
                              <th scope="col">QTD</th>
                              <th scope="col">Subtotal</th>
                            </tr>
                          </thead>
                          <tbody>
                            <tr>
                              <th scope="row">KC10392</th>
                              <td>Combo Noite Boteco</td>
                              <td>R$ 120,00</td>
                              <td>01</td>
                              <td>R$ 120,00</td>
                            </tr>
                            <tr>
                              <th scope="row">KC10456</th>
                              <td>Kit Breja x24</td>
                              <td>R$ 40,00</td>
                              <td>02</td>
                              <td>R$ 80,00</td>
                            </tr>
                            <tr>
                              <th scope="row">KC10332</th>
                              <td>Kit Refri 10L</td>
                              <td>R$ 20,00</td>
                              <td>01</td>
                              <td>R$ 20,00</td>
                            </tr>
                          </tbody>
                          </table>
                          <table class="table table-success text-sumario">
                            <thead>
                                <tr>
                                  <th scope="col">Subtotal</th>
                                  <th scope="col">Frete</th>
                                  <th scope="col">Cupom</th>
                                  <th scope="col">Desconto</th>
                                  <th scope="col">Valor Total</th>
                                </tr>
                              </thead>
                            <tr>
                              <th  scope="row">R$ 220,00</th>
                              <td >R$ 12,00</td>
                              <td>BEMVINDO20</td>
                              <td >- R$ 20,00</td>
                              <td class="table-success">R$ 212,00</td>
                            </tr>
                          </table>
                      </div>                      
              </div> 
            </div>  
      </div>
    </div>
  </div>
  <% include partials/footer-alt %>
  <% include partials/script %>
</body>
</html>