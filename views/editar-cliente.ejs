<% include partials/header %>

<body>
    <div class="page">
        <%- include('partials/navbar') %>

        <div id="meio-home" class="container">
            <div class="row">
                <%- include('partials/breadcrumb') %>

                <div id="content" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div id="painel-cliente" class="container center">

                        <!-- Card Dados Pessoais -->
                        <div class="card card-body painel-dash" id="borda">

                            <!-- Form dos dados -->
                            <div class="row">
                                <div class="col-4">
                                    <h4>Dados Pessoais</h4>
                                </div>
                            </div>
                            <form action="/usuarios/editar-cliente/<%= usuario.id %>?_method=PUT" method="POST">
                                <div class="card card-body painel-dash border-left-primary shadow ml-2 mr-2">
                                    <div class="row">
                                        <div class='col-8'>
                                            <input type="hidden" name="id" value="<%= usuario.id %>">
                                            <!-- NOME COMPLETO-->
                                            <div class="form-group row">
                                                <label for="inputNome" class="col-sm-3 col-form-label">Nome
                                                    Completo</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" id="inputNome"
                                                        name="nomeCli"
                                                        value="<%= usuario.nome + ' ' + usuario.sobrenome %> ">
                                                </div>
                                            </div>
                                            <!-- DATA NASCIMENTO -->
                                            <div class="form-group row">
                                                <label for="inputData" class="col-sm-3 col-form-label">Data de
                                                    Nascimento</label>
                                                <div class="col-sm-5">
                                                    <input type="date" class="form-control" id="inputData"
                                                        name="dataCli" value="<%= usuario.data_nasc %>">
                                                </div>
                                            </div>
                                            <!-- CPF-->
                                            <div class="form-group row">
                                                <label for="inputCPf" class="col-sm-3 col-form-label">CPF</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" id="inputCPF" name="cpfCli"
                                                        value="<%= usuario.cpf %>">
                                                </div>
                                            </div>
                                            <!-- Celular-->
                                            <div class="form-group row">
                                                <label for="inputCel" class="col-sm-3 col-form-label">Celular</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" id="inputCel" name="celular"
                                                        value="<%= usuario.celular %>">
                                                </div>
                                            </div>
                                            <!-- EMAIL -->
                                            <div class="form-group row">
                                                <label for="inputEmail" class="col-sm-3 col-form-label">Email</label>
                                                <div class="col-sm-9">
                                                    <input type="email" class="form-control" id="inputEmail"
                                                        name="emailCli" value="<%= usuario.email %>">
                                                </div>
                                            </div>
                                            <!-- SEXO -->
                                            <fieldset class="form-group">
                                                <div class="row">
                                                    <legend class="col-form-label col-sm-3 pt-0">Sexo</legend>
                                                    <div class="form-check form-check-inline">
                                                        <input class="form-check-input" type="radio" name="radioSexo"
                                                            id="radioSexoF" value="F"
                                                            <%= (usuario.sexo == 'F')? 'checked' : '' %>>
                                                        <label class="form-check-label"
                                                            for="radioSexoF">Feminino</label>
                                                    </div>
                                                    <div class="form-check form-check-inline">
                                                        <input class="form-check-input" type="radio" name="radioSexo"
                                                            id="radioSexoM" disabled value="M"
                                                            <%= (usuario.sexo == 'M')? 'checked' : '' %>>
                                                        <label class="form-check-label"
                                                            for="radioSexoM">Masculino</label>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                        <!-- FOTO -->
                                        <div class="col-4 text-right">
                                            <img id='avatar' class='shadow border-bottom-primary rounded-circle'
                                                src='/images/perfilCliente.png' width="160px" height="160px"
                                                alt='avatar'>
                                            <button class="btn btn-alt text-center">Escolha sua foto!</button>
                                        </div>
                                    </div>
                                </div>

                                <!-- ENDERECO -->
                                <% if (endereco) { %>
                                <div class="card painel-dash border-left-primary shadow mt-2 ml-2 mr-2">
                                    <div class="card-body ">
                                        <div class="row">
                                            <div class='col-4'>
                                                <h5>Endereço</h5>
                                            </div>
                                        </div>
                                        <!-- Divider -->
                                        <hr class="sidebar-divider my-0">

                                        <div class="painel-dados row">
                                            <div class='col-12'>
                                                <div class="row text-left">
                                                    <div class="row col-12">
                                                        <!-- Dados -->
                                                        <div class='col-11'>
                                                            <!-- ID -->
                                                            <div class="form-group row">
                                                                <input type="hidden" class="form-control"
                                                                    name="enderecoId" value="<%= endereco.id %>">
                                                            </div>
                                                            <!-- CEP-->
                                                            <div class="form-group row">
                                                                <label for="inputRua"
                                                                    class="col-sm-2 col-form-label">CEP</label>
                                                                <div class="col-sm-5">
                                                                    <input type="text" class="form-control" name="cep"
                                                                        id="inputCep" value="<%= endereco.cep %>">
                                                                </div>

                                                                <div class=" text-left col-sm-2">
                                                                    <button
                                                                        class="btn btn-sm btn-outline-secondary">Buscar</button>
                                                                </div>

                                                            </div>
                                                            <!-- RUA -->
                                                            <div class="form-group row">
                                                                <label for="inputRua"
                                                                    class="col-sm-2 col-form-label">Rua</label>
                                                                <div class="col-sm-5">
                                                                    <input type="text" class="form-control" name="rua"
                                                                        id="inputRua"
                                                                        value="<%= endereco.logradouro %>">
                                                                </div>
                                                                <label for="inputNum"
                                                                    class="col-sm-1 col-form-label">Nº</label>
                                                                <div class="col-sm-2">
                                                                    <input type="text" class="form-control"
                                                                        name="numeral" id="inputNum"
                                                                        value="<%= endereco.numeral %>">
                                                                </div>
                                                            </div>
                                                            <!-- COMPLEMENTO -->
                                                            <div class="form-group row">
                                                                <label for="inputComplemento"
                                                                    class="col-sm-2 col-form-label">Complemento</label>
                                                                <div class="col-sm-8">
                                                                    <input type="text" class="form-control"
                                                                        name="complemento" id="inputComplemento"
                                                                        value="<%= endereco.complemento %>">
                                                                </div>
                                                            </div>
                                                            <!-- CIDADE -->
                                                            <div class="form-group row">
                                                                <label for="inputCidade"
                                                                    class="col-sm-2 col-form-label">Cidade</label>
                                                                <div class="col-sm-5">
                                                                    <input type="text" class="form-control"
                                                                        name="cidade" id="inputCidade"
                                                                        value="<%= endereco.cidade %>">
                                                                </div>
                                                            </div>
                                                            <!-- ESTADO -->
                                                            <div class="form-group row">
                                                                <label for="inputEstado"
                                                                    class="col-sm-2 col-form-label">Estado</label>
                                                                <div class="col-sm-5">
                                                                    <select id="inputEstado" class="form-control"
                                                                        name="estado">
                                                                        <option
                                                                            <%= (endereco.estado == null)? 'selected' : '' %>>
                                                                            Escolher...</option>
                                                                        <option value="SP"
                                                                            <%= (endereco.estado == 'SP')? 'selected' : '' %>>
                                                                            SP
                                                                        </option>
                                                                        <option value="RJ"
                                                                            <%= (endereco.estado == 'RJ')? 'selected' : '' %>>
                                                                            RJ
                                                                        </option>
                                                                        <option value="MG"
                                                                            <%= (endereco.estado == 'MG')? 'selected' : '' %>>
                                                                            MG
                                                                        </option>
                                                                        <option value="RS"
                                                                            <%= (endereco.estado == 'RS')? 'selected' : '' %>>
                                                                            RS
                                                                        </option>
                                                                    </select>
                                                                </div>
                                                            </div>

                                                        </div>
                                                        <!-- Fim dados -->
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } else { %>
                                <div class="card painel-dash border-left-primary shadow mt-2 ml-2 mr-2">
                                    <a href="/usuarios/editar-endereco">Cadastrar
                                        endereço</a>
                                </div>
                                <% } %>

                                <!-- MUDAR SENHA -->
                                <div class="card painel-dash border-left-primary shadow mt-2 ml-2 mr-2">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class='col-4'>
                                                <h5>Mudar Senha</h5>
                                            </div>
                                        </div>
                                        <!-- Divider -->
                                        <hr class="sidebar-divider my-0">

                                        <div class="painel-dados row">
                                            <div class='col-12'>
                                                <div class="row text-left">
                                                    <div class="row col-12">
                                                        <div class='col-11'>
                                                            <!-- Senha-->
                                                            <div class="form-group row">
                                                                <label for="senhaAtual"
                                                                    class="col-sm-3 col-form-label">Senha Atual:</label>
                                                                <div class="col-sm-4">
                                                                    <input type="password" class="form-control"
                                                                        name="senhaAtual" id="senhaAtual">
                                                                </div>
                                                            </div>
                                                            <!-- Nova Senha -->
                                                            <div class="form-group row">
                                                                <label for="novaSenha"
                                                                    class="col-sm-3 col-form-label">Nova
                                                                    Senha:</label>
                                                                <div class="col-sm-4">
                                                                    <input type="password" class="form-control"
                                                                        name="novaSenha" id="novaSenha">
                                                                </div>
                                                            </div>
                                                            <!-- Confirmar Senha -->
                                                            <div class="form-group row">
                                                                <label for="corfirmarSenha"
                                                                    class="col-sm-3 col-form-label">Confirmar
                                                                    Senha:</label>
                                                                <div class="col-sm-4">
                                                                    <input type="password" class="form-control"
                                                                        name="confirmarSenha" id="confirmarSenha">
                                                                </div>
                                                            </div>
                                                            <!-- Fim senha -->
                                                        </div>
                                                        <% if(err != 0){ %>
                                                        <p><%= err %></p>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                        <!-- senha -->



                                    </div>
                                </div>

                                <!-- BOTÂO ALTERAR-->
                                <div class="text-right mt-2">
                                    <button type="submit" class="btn btn-alt">Salvar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <% include partials/footer-alt %>
    <% include partials/script %>
</body>