<% include partials/header %>

<body>
    <!-- PAGINA COMPLETA -->
    <div class="page">
        <%- include('partials/navbar') %>

        <!-- CONTEÚDO PRINCIPAL -->
        <div id="meio-home" class="container">
            <div class="row ">

                <!-- CONTEÚDO PRINCIPAL -->
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <!-- CONTAINER CAMINHO DAS PAGINAS -->
                    <%- include('partials/breadcrumb') %>
                    <!-- FIM CONTAINER CAMINHO DAS PAGINAS -->


                    <div id="painel-cliente" class="container">
                        <!-- ### CARD DE DADOS -->
                        <div class="card painel-dash border-left-primary shadow ml-5 mr-5">
                            <div class="card-body painel-dash">

                                <div class="row">
                                    <div class='col-4'>
                                        <h4>Dados Pessoais</h4>
                                    </div>
                                    <div class='col-8 text-right'>
                                        <button class="btn btn-alt">Alterar Dados</button>
                                    </div>


                                </div>
                                <!-- Divider -->
                                <hr class="sidebar-divider my-0">

                                <div class="painel-dados row">

                                    <div class='col-8'>
                                        <!-- NOME COMPLETO-->
                                        <div class="form-group row">
                                            <label for="inputNome" class="col-sm-3 col-form-label">Nome Completo</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" id="inputNome">
                                            </div>
                                        </div>
                                        <!-- DATA NASCIMENTO -->
                                        <div class="form-group row">
                                            <label for="inputData" class="col-sm-3 col-form-label">Data de
                                                Nascimento</label>
                                            <div class="col-sm-5">
                                                <input type="date" class="form-control" id="inputData">
                                            </div>
                                        </div>
                                        <!-- CPF-->
                                        <div class="form-group row">
                                            <label for="inputCPf" class="col-sm-3 col-form-label">CPF</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" id="inputCPF">
                                            </div>
                                        </div>
                                        <!-- EMAIL -->
                                        <div class="form-group row">
                                            <label for="inputEmail" class="col-sm-3 col-form-label">Email</label>
                                            <div class="col-sm-9">
                                                <input type="email" class="form-control" id="inputEmail">
                                            </div>
                                        </div>
                                        <!-- SEXO -->
                                        <fieldset class="form-group">
                                            <div class="row">
                                                <legend class="col-form-label col-sm-3 pt-0">Sexo</legend>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="radioSexo"
                                                        id="radioSexoF" value="opcao1">
                                                    <label class="form-check-label" for="radioSexoF">Feminino</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="radioSexo"
                                                        id="radioSexoM" value="opcao2">
                                                    <label class="form-check-label" for="radioSexoM">Masculino</label>
                                                </div>
                                            </div>
                                        </fieldset>
                                    </div>
                                    <div class="col-4 text-center">
                                        <img id='avatar' class='shadow border-bottom-primary rounded-circle'
                                            src='../images/perfilCliente.png' width="150px" height="150px" alt='avatar'>
                                        <button class="btn btn-alt text-center">Escolha sua foto!</button>
                                    </div>


                                </div>
                            </div>
                        </div>
                        <!-- FIM CARD DADOS PESSOAIS -->

                        <!-- ### CARD DE DADOS PROFISSIONAIS -->
                        <% if(!lojas.usuarios_id == usuarios) { %>
                            document.getElementsById('profissional).className = 'invisible';                            
                        <% } %>
                        <div id="profissional" class="card painel-dash border-left-primary shadow ml-5 mr-5">
                            <div class="card-body painel-dash">

                                <div class="row">
                                    <div class='col-4'>
                                        <h4>Dados Profissionais</h4>
                                    </div>
                                    <div class='col-8 text-right'>
                                        <button class="btn btn-alt">Alterar Dados</button>
                                    </div>


                                </div>
                                <!-- Divider -->
                                <hr class="sidebar-divider my-0">

                                <div class="painel-dados row">

                                    <div class='col-8'>
                                        <!-- NOME DA LOJA-->
                                        <div class="form-group row">
                                            <label for="inputNomeLoja" class="col-sm-3 col-form-label">Nome da
                                                Loja</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" id="inputNomeLoja">
                                            </div>
                                        </div>
                                        <!-- CNPJ-->
                                        <div class="form-group row">
                                            <label for="inputCNPJ" class="col-sm-3 col-form-label">CNPJ</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" id="inputCNPJ">
                                            </div>
                                        </div>
                                        <!-- DESCRIÇÃO -->
                                        <div class="form-group row">
                                            <label for="inputDescricaoLoja"
                                                class="col-sm-3 col-form-label">Descrição</label>
                                            <div class="col-sm-9">
                                                <textarea class="form-control" id="inputDescricaoLoja"
                                                    rows="3"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-4 text-center">
                                        <img id='avatar' class='shadow border-bottom-primary rounded'
                                            src='../images/deco-avatar.png' width="150px" height="150px" alt='avatar'>
                                        <button class="btn btn-alt text-center">Escolha sua foto!</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- ### CARD DE ENDERECO -->
                        <div class="card painel-dash border-left-primary shadow ml-5 mr-5">
                            <div class="card-body ">
                                <div class="row">
                                    <div class='col-4'>
                                        <h4>Endereço:</h4>
                                    </div>
                                    <div class='col-8 text-right'>
                                        <button class="btn btn-alt">Alterar Endereço</button>
                                    </div>

                                </div>
                                <!-- Divider -->
                                <hr class="sidebar-divider my-0">

                                <div class="painel-dados row">
                                    <div class='col-12'>
                                        <div class="row text-left">
                                            <div class="row col-12">

                                                <!-- FORMULARIO -->
                                                <form class="col-sm-12 p-3 mb-5 ">


                                                    <!-- CEP-->
                                                    <div class="form-group row">
                                                        <label for="inputRua"
                                                            class="col-sm-2 col-form-label">CEP</label>
                                                        <div class="col-sm-5">
                                                            <input type="text" class="form-control" id="inputCep">
                                                        </div>

                                                        <div class=" text-left col-sm-2">
                                                            <button
                                                                class="btn btn-sm btn-outline-secondary">Buscar</button>
                                                        </div>

                                                    </div>
                                                    <!-- RUA -->
                                                    <div class="form-group row">
                                                        <label for="inputRua"
                                                            class="col-sm-2 col-form-label">Rua</label>
                                                        <div class="col-sm-5">
                                                            <input type="text" class="form-control" id="inputRua">
                                                        </div>
                                                        <label for="inputNum" class="col-sm-2 col-form-label">Nº</label>
                                                        <div class="col-sm-3">
                                                            <input type="text" class="form-control" id="inputNum">
                                                        </div>
                                                    </div>
                                                    <!-- COMPLEMENTO -->
                                                    <div class="form-group row">
                                                        <label for="inputComplemento"
                                                            class="col-sm-2 col-form-label">Complemento</label>
                                                        <div class="col-sm-8">
                                                            <input type="text" class="form-control"
                                                                id="inputComplemento">
                                                        </div>
                                                    </div>
                                                    <!-- BAIRRO -->
                                                    <div class="form-group row">
                                                        <label for="inputBairro"
                                                            class="col-sm-2 col-form-label">Bairro</label>
                                                        <div class="col-sm-8">
                                                            <input type="text" class="form-control" id="inputBairro">
                                                        </div>
                                                    </div>
                                                    <!-- CIDADE -->
                                                    <div class="form-group row">
                                                        <label for="inputCidade"
                                                            class="col-sm-2 col-form-label">Cidade</label>
                                                        <div class="col-sm-5">
                                                            <input type="text" class="form-control" id="inputCidade">
                                                        </div>
                                                    </div>
                                                    <!-- ESTADO -->
                                                    <div class="form-group row">
                                                        <label for="inputEstado"
                                                            class="col-sm-2 col-form-label">Estado</label>
                                                        <div class="col-sm-5">
                                                            <select id="inputEstado" class="form-control">
                                                                <option selected>Escolher...</option>
                                                                <option value="1">São Paulo</option>
                                                                <option value="2">Rio de Janeiro</option>
                                                                <option value="3">Minas Gerais</option>
                                                                <option value="4">Rio Grande do Sul</option>
                                                            </select>
                                                        </div>
                                                    </div>

                                                </form>
                                                <!-- FIM FORMULARIO -->
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>


                        <!-- ### CARD DE MUDAR SENHA -->
                        <div class="card painel-dash border-left-primary shadow ml-5 mr-5">
                            <div class="card-body">
                                <div class="row">
                                    <div class='col-4'>
                                        <h4>Mudar Senha</h4>
                                    </div>
                                    <div class='col-8 text-right'>
                                        <button class="btn btn-alt">Alterar Senha</button>
                                    </div>

                                </div>
                                <!-- Divider -->
                                <hr class="sidebar-divider my-0">

                                <div class="row">
                                    <!-- FORMULARIO -->
                                    <form class="col-sm-12 p-3 mb-5 ">

                                        <!-- Senha-->
                                        <div class="form-group row">
                                            <label for="inputSenha" class="col-sm-3 col-form-label">Senha Atual:</label>
                                            <div class="col-sm-4">
                                                <input type="password" class="form-control" id="inputSenha">
                                            </div>
                                        </div>
                                        <!-- Nova Senha -->
                                        <div class="form-group row">
                                            <label for="inputNovaSenha" class="col-sm-3 col-form-label">Nova
                                                Senha:</label>
                                            <div class="col-sm-4">
                                                <input type="password" class="form-control" id="inputNovaSenha">
                                            </div>
                                        </div>
                                        <!-- Confirmar Senha -->
                                        <div class="form-group row">
                                            <label for="inputCorfirmarSenha" class="col-sm-3 col-form-label">Confirmar
                                                Senha:</label>
                                            <div class="col-sm-4">
                                                <input type="password" class="form-control" id="inputConfirmarSenha">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- ### CARD DE MUDAR PERFIL -->
                        <div class="card painel-dash border-left-primary shadow mx-5">
                            <a href='../painel-cliente'>
                                <button class="btn btn-cheio btn-small col-12 text-left">
                                    Alterar para Perfil Cliente </button>
                            </a>
                        </div>
                        <!-- #  Fim do Painel -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% include partials/footer-alt %>
    </div>
</body>
<% include partials/script %>

</html>