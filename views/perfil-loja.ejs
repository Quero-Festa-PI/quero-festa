<% include partials/header %>

<body>
    <!-- PAGINA COMPLETA -->
    <div class="page">
        <%- include('partials/navbar') %>

        <!-- CONTEÚDO PRINCIPAL -->
        <div id="meio-home" class="container">
            <div class="row ">
                <!-- # Inicio Painel -->
                <div id="painel-publico" class="container">
                    <!-- CONTAINER CAMINHO DAS PAGINAS -->
                    <%- include('partials/breadcrumb') %>
                    <!-- FIM CONTAINER CAMINHO DAS PAGINAS -->
                    <!-- ### CARD DE DADOS -->
                    <div class="card painel-dash border-left-primary shadow mx-5">
                        <div class="card-body painel-dash">

                            <div class="row">
                                <div class='col-4'>
                                    <h3><%= loja.nome %></h3>
                                </div>
                            </div>
                            <!-- Divider -->
                            <hr class="sidebar-divider my-0">

                            <div class="painel-dados row">
                                <div class="col-4 text-center">
                                    <img id='avatar' class='shadow border-bottom-primary' src='../images/deco-avatar.png'
                                        width="200px" height="200px" alt='avatar'>
                                </div>

                                <div class='col-8'>
                                    <div class="row text-left">
                                        <div class="text-left col-3">
                                            <h6>Descrição:</h6>
                                            <h6>Vendedor:</h6>
                                        </div>
                                        <div class="text-left col-9 text-primary">
                                            
                                            <h6><%= loja.descricao %></h6>
                                            <h6><%= loja.usuario.nome%></h6>
                                            
                                        </div>
                                    </div>

                                    <!-- Divider -->
                                    <hr class="sidebar-divider my-0">

                                    <div class='row text-left'>
                                        <div class="text-left col-3">
                                            <h6>Localização:</h6>
                                        </div>
                                        <div class="text-left col-9 text-primary">
                                            <h6>Guarulhos - SP</h6>
                                        </div>
                                    </div>
                                    <!-- Divider -->
                                    <hr class="sidebar-divider my-0">

                                    <div class='row text-left'>
                                        <div class="text-left col-3">
                                            <h6>Avaliação:</h6>

                                        </div>
                                        <div class="text-left col-9 text-primary">
                                            <h6>5.0</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ### Anuncios da Loja -->
                    <div class="mx-5">
                        <div class="container">
                            <anuncio>
                                <div class="row row-level-1">
                                    <div class="row-inner clearfix">
                                        <div class="col-inner d-flex">
                                            <!-- card 1 -->
                                            <% for( produto of loja.produtos) { %>
                                                <div class="col-sm-3">
                                                    <card class=" anuncio-box card shadow">
                                                        <div class="row no-gutters rounded-top">                                    
                                                            <div class='anuncio text-center'>
                                                                <div class="m-1">
                                                                    <a href="#"><img src="../images/bodasPapel.png" alt="" class="img-fluid rounded"></a> 
                                                                </div>
                                                            </div>
                                                            
                                                            <div class="mt-1 mr-3 mb-2 ml-3">
                                                                <div class="row">
                                                                    <div class="col-12">
                                                                        <titulo class="text-left card-title"><%= produto.nome%> </titulo>
                                                                    </div>
                                                                </div>
                                                                
                                                                <div class="row">
                                                                    <div class="col-12">
                                                                        <preco class="text-left">R$<%= produto.valor%></preco> 
                                                                    </div>
                                                                </div>
    
                                                                <div class="row">
                                                                    <div class="col-12">
                                                                        <info class='card-text text-left'>                                         
                                                                            <%= produto.descricao%>                          
                                                                        </info>
                                                                    </div>
                                                                </div>
                                                                
                                                                <div class="row">
                                                                    <div class="col-12">
                                                                        <button type="button" class="btn-alt btn btn-sm">Ver</button>                                                
                                                                    </div>
                                                                </div>
                                                            
                                                            </div>
                                                        </div>
                                                    </card>
                                                </div>
                                            <% } %>
                                            <!-- Fim card 1 -->
                                        </div>
                                    </div>
                                </div>
                            </anuncio>
                        </div>                        
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% include partials/footer-alt %>

    <% include partials/script %>
</body>

</html>