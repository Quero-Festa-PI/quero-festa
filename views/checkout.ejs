<% include partials/header %>

<body>
  <div class="page-checkout">
    <%- include('partials/navbar') %>

    <!-- CONTEÚDO PRINCIPAL -->
    <div class="container">
      <!-- Caminho das Paginas -->
      <%- include('partials/breadcrumb') %>

      <!-- Endereço e Pagamento-->
      <div class="row dados-pedido">
        <div class="dados-endereco">
          <div class="header-endereco">
            <h5>Confirmar Endereço</h5>
            <a href="/usuarios/editar-endereco/<%= endereco.usuarios_id%>" class="btn btn-alt">Editar</a>
          </div>

          <!-- Divider -->
          <hr class="sidebar-divider my-0">

          <!-- dados -->
          <div class="infos-endereco">
            <span class="cinza"><%= endereco.logradouro + ', ' + endereco.numeral%></span>
            <% if(endereco.complemento && endereco.complemento != " "){ %>
            <span class="cinza"><%= endereco.complemento %></span>
            <% } %>
            <span class="cinza"><%= endereco.cidade + ' - ' + endereco.estado %></span>
            <span class="cinza"><%= endereco.cep %></span>
            <input id="id-endereco" type="hidden" value="<%= endereco.id %>">
          </div>
        </div>

        <div class="dados-pagamento">

          <h5>Opções de Pagamento</h5>

          <!-- Divider -->
          <hr class="sidebar-divider my-0">

          <h6 class="valor-total">Valor total: </h6><span></span>

          <h6>Forma de Pagamento:</h6>
          <div class="opcoes-pagamento">
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="pagamento" id="boleto" value="boleto">
              <label id="cinza" class="form-check-label" for="boleto">Pagar na entrega</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="pagamento" id="debito" value="debito">
              <label id="cinza" class="form-check-label" for="debito">Cartão</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="pagamento" id="credito" value="credito">
              <label id="cinza" class="form-check-label" for="credito">Transferência Bancária</label>
            </div>            
          </div>          
        </div>
      </div>
      <div>
        <p><strong>Observação: </strong> O vendedor entrará em contato para acertar a forma de pagamento</p>
      </div>
      <div class="row botoes">
        <button onclick="redirecionarCarrinho()" class="botao-carrinho">Ver Carrinho</button>
        <button onclick="cadastrarPedido()" class="botao-confirmar">Confirmar</button>
      </div>            
    </div>
    <%- include('partials/script') %>
    <script src="/javascripts/checkout.js"></script>
</body>