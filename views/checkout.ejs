<% include partials/header %>

<body>
  <div class="page">
    <%- include('partials/navbar') %>

    <!-- CONTEÚDO PRINCIPAL -->
    <div id="meio-home" class="container">
      <div class="row">
        <!-- Caminho das Paginas -->
        <%- include('partials/breadcrumb') %>     
  
        <div id="painel-cliente" class="container center">
          <!-- Endereço e Pagamento--> 
          <div class="row">
            <div class="col-6 card card-body checkout border-left-primary">
              <form action="/usuarios/checkout" method="POST">
                <div class="row">
                  <div class="col-5">
                    <h6>Confirmar Endereço</h6>
                  </div>
                  <div class="col-7 text-right">
                      <a href="/usuarios/editar-endereco/<%= endereco.usuarios_id%>" class="btn btn-alt">Editar</a>
                  </div>
                </div>
              </form>
  
              <!-- Divider -->
              <hr class="sidebar-divider my-0">

              <!-- dados -->
              <div id='endereco' class="ml-2">
                <table class="table table-sm table-borderless">
                  <thead>
                    <tr>
                      <th scope="col"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <th scope="row"></th>
                    </tr>
                    <tr>
                      <td id="cinza"><%= endereco.logradouro + ', ' + endereco.numeral%></td>
                    </tr>
                    <% if(endereco.complemento){ %>
                      <tr id="cinza">
                        <%= endereco.complemento %>
                      </tr>
                    <% } %>
                    <tr>
                      <td id="cinza"><%= endereco.cidade + ' ' + endereco.estado %></td>
                    </tr>
                    <tr>
                      <td id="cinza"><%= endereco.cep %></td>
                    </tr>
                  </tbody>
                </table>                        
              </div>
            </div>

            <div class="col-6 card card-body checkout border-left-primary">
              
              <div class="row">
                <div class='col-5'>
                  <h6>Opções de Pagamento</h6>
                </div>
              </div>
              
              <!-- Divider -->
              <hr class="sidebar-divider my-0">
  
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="pagamento" id="boleto" value="boleto">
                <label id="cinza" class="form-check-label" for="boleto">Boleto</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="pagamento" id="debito" value="debito">
                <label id="cinza" class="form-check-label" for="debito">Cartão de Débito</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="pagamento" id="credito" value="credito">
                <label id="cinza" class="form-check-label" for="credito">Cartão de Crédito</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="pagamento" id="transferencia" value="transferencia">
                <label id="cinza" class="form-check-label" for="transferencia">Transferência Bancaria</label>
              </div>
  
            </div>
          </div>
          
          <div class="row">
            <!-- Pedido -->
            <div class="col-12 card card-body checkout border-left-primary rounder">
              <div class="row">
                <div class='col-5'>
                  <h6>Detalhes do Pedido</h6>
                </div>

                <div class="col-7 text-right">
                  <button type="button" class=" btn btn-link btn-cancelar">Cancelar Pedido</button>
                </div>
              </div>

              <!-- Divider -->
              <hr class="sidebar-divider my-0">

              <table class="table table-sm">
                <thead>
                  <tr>
                    <th scope="col">Descrição</th>
                    <th scope="col">Preço</th>
                    <th scope="col">Qtde</th>
                  <th scope="col">Subtotal</tr>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>nome</td>
                    <td>R$ 169,00</td>
                    <td>01</td>
                    <td>169,00</td>
                  </tr>                                                
                </tbody>
              </table>   

              <div class="row">
                <div class="col-12 text-right">
                  <a type="button" href="/pedidos/carrinho"
                    class="btn btn-link btn-comprando">Continuar Comprando</a>
                  <a type="button" href="/pedidos/confirmacao"
                    class="btn btn-link btn-confirmar">Confirmar Pedido</a>
                </div>
              </div>
            </div>
  
          </div>
          
        </div>
      </div>       
    </div>
</body>